page {
  background-color: #f5f5f5;
}

/*标题*/
.title {
  width: 100%;
  height: 88rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.title-sel {
  color: #24272c;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/*页面内容*/
.swiper {
  width: 90%;
  flex: 1;
  overflow: auto;
  margin: 0 auto;
  height: 4000rpx;
}

/*搜索框*/
.entirety {
  height: 100%;
}

.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #EFEFF4;
  border-top: 1rpx solid #D7D6DC;
  border-bottom: 1rpx solid #D7D6DC;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}

.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: rgb(7, 182, 4);
  white-space: nowrap;
}

/*列表内容*/
.container-plan {
  height: 100%;
}

.container-type {
  margin-top: 5rpx;
  background-color: white;
  height: 510rpx;
  width: 100%;
}

.table-container {
  border-bottom: 1px solid #dcdcdc;
  width: 92%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  vertical-align: middle;
  box-sizing: border-box;
  margin: 20rpx auto;
  height: 420rpx;
}

.table-detail {
  font-size: 32rpx;
  font-weight: 400;
  margin-top: 20rpx;
}

.table-count {
  width: 100%;
  font-size: 30rpx;
  color: rgb(158, 163, 158);
  margin-top: 25rpx;
  font-weight: 400;
}

.title-bottom {
  margin: 0 30rpx 0 30rpx;
  display: flex;
  /* flex-direction:row; */
  justify-content: space-between;
  flex-wrap: nowrap;

}

.plan-btn {
  background: #138DE9;
  text-align: center;
  line-height: 60rpx;
  height: 60rpx;
  width: 130rpx;
}

.planbtn-text {
  color: white;
  font-size: 32rpx;
  font-weight: 400;
}

/*审核状态*/
.table-status {
  float: right;
  margin-top: -480rpx;
  margin-right: 10rpx;
  color: rgb(3, 105, 3);
  font-weight: 700;
  font-size: 32rpx;
}

/*添加*/
.deleteContainer {
  position: fixed;
  top: 20%;
  right: 10rpx;
  z-index: 999;
}

.deleteImg {
  width: 80rpx;
  height: 80rpx;
}
/*搜索框删除按钮*/
.cancle_btn{
  position: absolute;
  right: 40rpx;
  top:15rpx;
  width: 48rpx;
  height: 48rpx;
  z-index: 999;
}